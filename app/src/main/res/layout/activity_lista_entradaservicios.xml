<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/imageView_imagen"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:padding="5dp"
        android:contentDescription="DescripciÃ³n del contenido de la imagen"
        android:src="@drawable/icongaleria"
        android:foregroundGravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />



        <TextView
            android:id="@+id/textView_superior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toRightOf="@+id/imageView_imagen"/>

        <TextView
            android:id="@+id/textView_inferior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Texto "
            android:padding="7dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_toRightOf="@+id/imageView_imagen"
            android:layout_below="@+id/textView_superior"
            android:textColor="#000"/>
    </RelativeLayout>


</LinearLayout>
